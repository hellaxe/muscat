<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">Add genres</h3>
  </div>
  <div class="modal-body">
    <%= form_for :artist_genres, url: update_multiple_artist_artist_genre_path, remote: true do %>
      <%= hidden_field_tag :artist_id, value: artist_id %>
      <%= collection_select @genres, :genre_id, Genre.order(:name), :id, :name %>
    <% end %>
    <p>One fine body…</p>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    <button class="btn btn-primary">Save changes</button>
  </div>
</div>