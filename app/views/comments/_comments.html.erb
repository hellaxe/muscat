<div id="comments">
  <h5>Comments:</h5>
  <%= form_for([commentable, Comment.new]) do |f| %>
  <div class="field">
    <%= f.text_area :content, cols: 20, rows: 3 %>
  </div>
  <div class="actions">
    <%= f.submit 'Write a comment' %>
  </div>
  <% end %>
  <% for comment in commentable.comments.latest %>
      <div class="comment">
        <%= simple_format comment.content  %>
      </div>
      <hr/>
  <% end %>
  <%= link_to 'All comments', [commentable, Comment] %>
</div>