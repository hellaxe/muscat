<div id="comments">
  <h5>Comments:</h5>
  <%= form_for([commentable, Comment.new], remote: true) do |f| %>
  <div class="field">
    <%= f.text_area :content, cols: 20, rows: 3, id: 'comment_text_area' %>
  </div>
  <div class="actions">
    <%= f.submit 'Write a comment' %>
  </div>
  <% end %>
  <div id="comments_placeholder">
    <%= render 'comments/latest', comments: commentable.comments.latest %>
  </div>
  <%= link_to [commentable, Comment], id:'comments_count' do%>
      <%= "All comments (#{commentable.comments.count})" %>
  <% end %>
</div>