<%= form_for(@artist, class: 'form-horizontal') do |f| %>
  <% if @artist.errors.any? %>
    <div id="error_explanation" class='alert alert-error'>
      <button type="button" class="close" data-dismiss="alert">Ã—</button>
      <h3><%= pluralize(@artist.errors.count, "error") %>:</h3>

      <ul>
      <% @artist.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="control-group">
    <%= f.label :name, class: 'control-label' %><br />
    <div class="controls"><%= f.text_field :name %></div>
  </div>
  <div class="control-group">
    <%= f.label :description, class: 'control-label' %><br />
    <div class="controls"><%= f.text_area :description %></div>
  </div>
  <div class="control-group">
    <%= f.label :photo, class: 'control-label' %>
      <div class="controls"><%= f.file_field :photo %></div>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
