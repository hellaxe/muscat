<% if flash[:notice] %>
    <div id="notice" class="alert alert-success">
      <button type="button" class="close" data-dismiss="alert">×</button>
      <%= flash[:notice] %>
    </div>
<% end %>
<% if flash[:alert] %>
    <div id="notice" class="alert alert-error">
      <button type="button" class="close" data-dismiss="alert">×</button>
      <%= flash[:alert] %>
    </div>
<% end %>