<div class="pull-right btn-group">
  <button class="btn"><%= current_or_guest_user.user_name %></button>
  <button class="btn dropdown-toggle" data-toggle="dropdown">
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu">
    <li><%= link_to 'Profile', user_path(current_or_guest_user) %></li>
    <li><%= link_to 'New review', new_review_path %></li>
    <% if session[:guest_user_id] #if guest %>
        <li><%= link_to 'Become a member', '#' %></li>
        <li><%= link_to 'Logout', '/guest_logout', method: :delete %></li>
    <% else %>
        <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
    <% end %>
  </ul>

</div>